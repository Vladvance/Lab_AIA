doctype html
html
  head
    title= 'Origami Store'
    link(rel='stylesheet', href='/stylesheets/bootstrap.min.css')
    link(rel='stylesheet', href='/stylesheets/style.css')
    script(src='javascripts/jquery-3.5.1.min.js')
    script(src='javascripts/bootstrap.min.js')
    script(src='javascripts/store.js')
  body
    nav.navbar.navbar-expand-md.navbar-dark.bg-dark
      a(href= './' class='navbar-brand')= 'Origami Store'
      button(aria-controls='basic-navbar-nav' type='button' aria-label='Toggle navigation' class='navbar-toggler collapsed')
        span.navbar-toggler-icon
      .navbar-collapse.collapse#basic-navbar-nav
        .ml-auto.navbar-nav
          a(href='./' data-rb-event-key='./' class='nav-link')= 'Home'
          a(href='./cart' data-rb-event-key='./cart' class='nav-link')= 'Shopping cart'
    block content
    if message
      include ./components/alert

